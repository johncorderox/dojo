<h1>Ninja Gold</h1>
Your Gold <input type="text" name="" value="<%= session[:gold] %>">
<br />
<div id="farm">
  Farm<br />
  (earns 10-20 golds)
  <form action="/farm" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <button type="submit">Find Gold!</button>
  </form>
</div>
<div id="cave">
  Cave<br />
  (earns 5-10 golds)
  <form action="/process" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="" value="cave">
    <button type="submit">Find Gold!</button>
  </form>
</div>
<div id="house">
  House<br />
  (earns 2-5 golds)
  <form action="/process" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="" value="house">
    <button type="submit">Find Gold!</button>
  </form>
</div>
<div id='casino'>
  Casino<br />
  (earns/takes 0-50 golds)
  <form action="/process" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="" value="casino">
    <button type="submit">Find Gold!</button>
  </form>
</div>
<br />
Activities<br />
<div id="chat">
  <%= session[:chat] %>
</div>
<style>

#farm, #cave, #house, #casino {
  display: inline-block;
  margin-left: 35px;
  margin-top: 20px;
  padding: 20px;
  border: 2px black solid
}

</style>
